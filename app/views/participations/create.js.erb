var flash = document.querySelector(".flash")

<% if !(flash[:alert]) %>
  //Ajaxで変更部分
  document.querySelector(".participate-btn").innerHTML = "<%= escape_javascript(render('participations/unparticipate')) %>"
  document.querySelector(".participate-names").innerHTML = "<%= escape_javascript(render('participations/participate_members')) %>"
  document.querySelector(".participate-number").innerHTML = "<%= escape_javascript(render('participate_number')) %>"
  // flash
  flash.classList.remove('flash__alert');
  flash.classList.add('flash__notice');
  flash.style.display = "block";
  flash.innerHTML = 'You joined this recruit!';
<% else %> 
  flash.classList.remove('flash__notice');
  flash.classList.add('flash__alert');
  flash.style.display = "block";
  flash.innerHTML = "<%= (flash[:alert]) %>"
<% end %>

flash.animate([{opacity: '0'}, {opacity: '1'}], 50)
setTimeout(function(){ 
  flash.style.display = "none"; 
}, 5000);


