.rate-wrapper
  #rate_json data-resource = rate_json(currency(current_user.origin))
  .rate-container
    h2 Rate
    .rate-inner
      = form_with url: rate_path, method: 'get', local: true do |f|
        .rate-item.current_country
          = render partial: 'static_pages/rate_item', 
                   locals: { f: f,
                            subtitle: "Current Country",
                            input_base_rate: "input_base_rate-0", 
                            base_currency: "base_currency-0",
                            input_target_rate: "input_target_rate-0",
                            target_currency: "target_currency-0",
                            base_rate: "base_rate-0",
                            target_rate: "target_rate-0",
                            target_country: current_user.current_country,
                           }
        - current_user.uniq_feature_mix_recruits.each_with_index do |mix_recruit, i|
          - if mix_recruit.country != current_user.current_country && mix_recruit.country != current_user.origin && currency_present?(currency(mix_recruit.country))
            .rate-item.next_recruit
              = render partial: 'static_pages/rate_item',
                      locals: { f: f,
                                subtitle: "Next Recruit-#{i}",
                                input_base_rate: "input_base_rate-#{i}", 
                                base_currency: "base_currency-#{i}",
                                input_target_rate: "input_target_rate-#{i}",
                                target_currency: "target_currency-#{i}",
                                base_rate: "base_rate-#{i}",
                                target_rate: "target_rate-#{i}",
                                target_country: mix_recruit.country,
                              }
          - break if i == 3
