.members_index-wrapper
  .members_index-container
    h2.members_index-title
      | Members
    .members_index-inner
      .members_index-pagination
        = paginate @paginated_users
        = page_entries_info @paginated_users
      - @paginated_users.each do |user|
        .members_index-items
          .members_index-image
            - if user.image.attached?
              = image_tag user.image
            - elsif user.gender == 'â™‚'
              = image_pack_tag 'default_male.png'
            - elsif user.gender == 'â™€'
              = image_pack_tag 'default_female.png'
            - else
              = image_pack_tag 'default_other.png'
          .members_index-text
            span.user_name = "#{user.user_name}" 
            span.age = "(#{age(user)})"
            span.gender = "#{user.gender}"
            p.origin_country
              | from 
              = country_name(user.origin)
            p.current_country
              | now in 
              = country_name(user.current_country)
        hr

