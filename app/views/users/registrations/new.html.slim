.sign-wrapper
  .sign-container
    h2
      | Sign up
    = form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user", local: true do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name"
      .field
        = f.text_field :user_name, autocomplete: "user_name", placeholder: "User name"
      .field
        = f.email_field :email, autocomplete: "email", placeholder: "Email"
      .field
        / = f.label :password
        / - if @minimum_password_length
        /   em
        /     | (
        /     = @minimum_password_length
        /     |  characters minimum)
        / br
        = f.password_field :password, autocomplete: "new-password", placeholder: "Password"
      .field
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password"
      .actions
        = f.submit "Sign up", class: "btn btn-primary"
        = render "users/shared/links"
      = link_to 'Guest Sign in', users_guest_sign_in_path, method: :post, class: "btn btn-success guest_sign_in"
